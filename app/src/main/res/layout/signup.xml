<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = "com.example.barkiestoyz.Front.Main">
    <!--Edit text for username-->
    <EditText
        android:id="@+id/create_user"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:hint = "Username"
        android:focusable = "true"
        android:layout_above = "@+id/create_password"
        android:layout_centerHorizontal = "true" />
    <!--Edit text for password-->
    <EditText
        android:id="@+id/create_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint = "Password"
        android:layout_above = "@+id/check_password"
        android:layout_centerHorizontal = "true"
        android:inputType="textPassword" />
    <!--Edit text for vertifying password-->
    <EditText
        android:id="@+id/check_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint = "Verifying Password"
        android:layout_above = "@+id/create"
        android:layout_centerHorizontal = "true"
        android:inputType="textPassword" />
    <!--Button to create an account-->
    <Button
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="goCreate"
        android:text="@string/Create"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal = "true" />
    <!--Button to go back to login page-->
    <Button
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="goBack"
        android:text="@string/Back"
        android:layout_below = "@+id/create"
        android:layout_centerHorizontal = "true" />
    <!-- Adding images, to make GUI cute -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/create"
        android:src="@drawable/dog2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bone" />
</RelativeLayout>