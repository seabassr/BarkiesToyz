<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barkiestoyz">
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity
            android:name=".Front.Main">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Front.AdminSide.Add"
            android:label="Add"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Front.AdminSide.Update"
            android:label="Update"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Front.AdminSide.Admin"
            android:label="Admin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Front.CustomerSide.Customer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Front.CustomerSide.Map"
            android:label="Maps"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Front.Signup"
            android:label="Signup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Front.CustomerSide.Payment"
            android:label="Payment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Front.CustomerSide.CustomerConfirmation"
            android:label="Confirmation"
            android:screenOrientation="portrait" />
    </application>
</manifest>